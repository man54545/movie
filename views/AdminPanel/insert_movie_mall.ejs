<%- include('header') %>

<section class="pcoded-main-container p-5">
    <div>
        <div class="row">
            <div class="col-lg-12">
                <form action="/movie_mall/add_movie_malls" method="post">
                    <div class="form-floating d-flex align-items-center">
                        <label class="floatingInput mb-0" style="margin-right: 20px;">Select Movie Name :-</label>
                        <select name="movie_id" class="form-control" style="box-shadow: none; width: 30%;">
                            <option value="">-- Select Movie Name -- </option>
                            <%  for(var i of detail) { %>
                                <option value="<%= i.id %>"><%= i.movie_name %></option>
                            <% } %>
                        </select>
                    </div><br>
                    <div class="form-floating d-flex flex-wrap align-items-center">
                        <label class="floatingInput mb-0" style="margin-right: 20px;">Select Mall
                            :-</label>
                        <% mall.forEach((v, i) => { %>
                            <div class="mx-4"><input type="checkbox" class="border-0 me-2" style="box-shadow: none;" placeholder="Movie Language" name="mall_id" value="<%= v.id %>">&nbsp; <%= v.mall_name %></div>
                        <% }) %>
                    </div><br>
                    <input type="submit" value="Submit" class="btn btn-primary px-4">
                </form>
            </div>
        </div>
        <!-- [ Main Content ] end -->

    </div>
</section>

<%- include('footer') %>
