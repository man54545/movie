    <div >
        <!-- [ breadcrumb ] start -->
     
        <div class="row">
            <div class="col-lg-12">
                <form action="/mall/editData" method="post">
                    <input type="hidden" value="<%= mall.id %>" name="editId">
                    
                    <div class="form-floating d-flex align-items-center">
                        <label class="floatingInput mb-0" style="margin-right: 20px;">Enter Mall Name :-</label>
