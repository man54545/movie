<%- include('header') %>

    <section class="pcoded-main-container p-5">
        <div>
            <!-- [ breadcrumb ] start -->

            <div class="row">
                <div class="col-lg-12">
                    <form action="/editPassword" method="post">
                        <div class="form-floating d-flex align-items-center">
                            <label class="floatingInput mb-0" style="margin-right: 20px;">Enter Current Password :-</label>
                            <input type="password" class="form-control border-0" style="box-shadow: none; width: 30%;" placeholder="Current Password" name="cpassword">
                        </div><br>
                        <div class="form-floating d-flex align-items-center">
                          <label class="floatingInput mb-0" style="margin-right: 20px;">Enter New Password :-</label>
                          <input type="password" class="form-control border-0" style="box-shadow: none; width: 30%;" placeholder="New Password" name="npassword">
                        </div><br>
                        <div class="form-floating d-flex align-items-center">
                          <label class="floatingInput mb-0" style="margin-right: 20px;">Enter Confirm Password :-</label>
                          <input type="password" class="form-control border-0" style="box-shadow: none; width: 30%;" placeholder="Confirm Password" name="copassword">
                        </div><br>
                        <input type="submit" value="Submit" class="btn btn-primary px-4">
                    </form>
                </div>
            </div>
            <!-- [ Main Content ] end -->

        </div>
    </section>

    <%- include('footer') %>